model PurchaseToken {
  id          String    @id @default(nanoid(16))
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  mainTokenId String
  mainToken   MainToken @relation(fields: [mainTokenId], references: [id])
  amount      Float
  capital     Float
  tokens      Float
  holderId    String
  holder      Holder    @relation(fields: [holderId], references: [id])
  subTokenId  String?
  subToken    SubToken? @relation(fields: [subTokenId], references: [id])
}

enum PurchaseStatus {
  Pending
  Approved
  Declined
}
