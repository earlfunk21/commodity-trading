model SubToken {
  id             String          @id @default(nanoid())
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  deletedAt      DateTime?
  amount         Float
  tokens         Float
  mainTokenId    String
  mainToken      MainToken       @relation(fields: [mainTokenId], references: [id])
  status         SubTokenStatus
  parentTokenId  String?
  holderId       String
  holder         Holder          @relation(fields: [holderId], references: [id])
  parentToken    SubToken?       @relation("SubTokenParent", fields: [parentTokenId], references: [id])
  childTokens    SubToken[]      @relation("SubTokenParent")
  purchaseTokens PurchaseToken[]
}

enum SubTokenStatus {
  Active
  Inactive
}
