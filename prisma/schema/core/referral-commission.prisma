model ReferralCommission {
  id                     String                @id @default(nanoid())
  createdAt              DateTime              @default(now())
  updatedAt              DateTime              @updatedAt
  deletedAt              DateTime?
  userId                 String
  user                   User                  @relation(fields: [userId], references: [id])
  amount                 Float
  mainTokenTransactionId String?
  mainTokenTransaction   MainTokenTransaction? @relation(fields: [mainTokenTransactionId], references: [id])
  mainTokenId            String?
  mainToken              MainToken?            @relation(fields: [mainTokenId], references: [id])
  releasedAt             DateTime?

  @@index([releasedAt])
  @@index([userId])
  @@index([userId, releasedAt])
}
