model User {
  id        String     @id @default(nanoid(16))
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  username  String     @unique
  email     String     @unique
  password  String
  status    UserStatus @default(Inactive)
  role      UserRole
  admin     Admin?
}

enum UserStatus {
  Active
  Inactive
}

enum UserRole {
  Holder
  Admin
  Owner
}
