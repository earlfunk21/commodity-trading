model AllocationAccount {
  id           String                        @id @default(nanoid(16))
  createdAt    DateTime                      @default(now())
  updatedAt    DateTime                      @updatedAt
  deletedAt    DateTime?
  allocation   Allocation                    @unique
  balance      Float
  accountType  AccountType
  transactions AllocationIncomeTransaction[]
}

enum AccountType {
  Withdrawable
  NonWithdrawable
}

enum Allocation {
  Referral
  TPCPIReferrer
  Management
  Pooling
  Capital
  ITManagement
  PartnersManagement
  TPCPIReferrerManagement
  TPCPIManagement
}
