model AllocationAccount {
  id           String                         @id @default(nanoid(16))
  createdAt    DateTime                       @default(now())
  updatedAt    DateTime                       @updatedAt
  deletedAt    DateTime?
  allocation   Allocation                     @unique
  balance      Float
  transactions AllocationAccountTransaction[]
}

enum Allocation {
  ITManagement
  PartnersManagement
  TPCPIReferrerManagement
  TPCPIManagement
  UnclaimedReferral
}
